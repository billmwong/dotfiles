#!/bin/bash

# wget https://github.com/davidabrahams/dotfiles/raw/master/setup && bash setup

sudo apt-get -y install git
sudo apt-get -y install vim
sudo apt-get -y install build-essential cmake
sudo apt-get -y install python-dev python3-dev python-pip build-essential
sudo pip install --upgrade pip
sudo apt-get -y install zsh
sudo apt-get -y install git-core
sudo apt-get -y install nodejs
sudo apt-get -y install npm
sudo apt-get -y install nodejs-legacy

sudo pip install flake8

git config --global user.email "david.abrahams@students.olin.edu"
git config --global user.name "David Abrahams"

sudo npm install -g eslint
sudo npm install -g eslint_d
sudo npm install -g babel-eslint
sudo npm install -g eslint-plugin-react
sudo npm install -g eslint-config-airbnb-es5

curl -fLo ~/.vim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

wget https://github.com/robbyrussell/oh-my-zsh/raw/master/tools/install.sh -O - | zsh 
chsh -s `which zsh`

cd $HOME
wget https://github.com/davidabrahams/dotfiles/raw/master/.vimrc
rm .zshrc && wget https://github.com/davidabrahams/dotfiles/raw/master/.zshrc
wget https://github.com/davidabrahams/dotfiles/raw/master/.eslintrc

git clone git://github.com/zsh-users/zsh-autosuggestions $ZSH_CUSTOM/plugins/zsh-autosuggestions

vim +PlugInstall

echo "\n[device]\nwifi.scan-rand-mac-address=no" | sudo tee --append /etc/NetworkManager/NetworkManager.conf

sudo shutdown -r 0
